# Production Environment Variables
# IMPORTANT: Rename this file to .env and fill in the values before deployment

# Database Configuration
DB_USER=muhasebe_user
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_123!
DB_NAME=muhasebe_db
DB_HOST=db
DB_PORT=5432

# Application Security
SECRET_KEY=CHANGE_THIS_TO_RANDOM_64_CHAR_STRING_USE_openssl_rand_hex_32
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# CORS - Add your domain
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# API Configuration
VITE_API_URL=https://yourdomain.com/api/v1

# Environment
ENVIRONMENT=production
DEBUG=False

# Backup Configuration
BACKUP_PATH=/var/backups/muhasebe-sistem

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=muhasebe@yourdomain.com
SMTP_PASSWORD=your-app-password

# SSL (if using nginx with SSL)
SSL_CERTIFICATE_PATH=/etc/nginx/ssl/fullchain.pem
SSL_CERTIFICATE_KEY_PATH=/etc/nginx/ssl/privkey.pem
